        <GridSplitter Grid.Row="1" Height="10" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="Black"/>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <local:DrawingLowerTab VerticalAlignment="Top" ></local:DrawingLowerTab>
