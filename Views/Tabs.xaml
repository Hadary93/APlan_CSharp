<UserControl x:Class="APLan.Views.Tabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APLan.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>
    <TabControl SelectedIndex="1"  Grid.Column="1" Grid.ColumnSpan="2" TabStripPlacement="Top" Background="Transparent" BorderBrush="Black" BorderThickness="5">
        <TabItem Header="CanvasTools"  BorderThickness="5" Height="20">
            <local:CanvasToolsTab></local:CanvasToolsTab>
        </TabItem>
        <TabItem Header="Planning"  BorderThickness="5" Height="20">
            <local:PlanningTab></local:PlanningTab>
        </TabItem>
    </TabControl>

</UserControl>
