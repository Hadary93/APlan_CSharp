<UserControl x:Class="APLan.Views.VisualizedData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APLan.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <!--lines visibility-->
        <CheckBox Grid.Row="0" 
                  Grid.Column="1"
                  Content="Knoten"
                  IsChecked="True"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding Knoten}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="1" 
                  Grid.Column="1"
                  Content="Kanten" 
                  IsChecked="True"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding Kanten}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"/>
        <CheckBox Grid.Row="2" 
                  Grid.Column="1"
                  Content="LA"
                  IsChecked="True"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding Horizontal}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="3" 
                  Grid.Column="1"
                  Content="HO"
                  IsChecked="True"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding Vertical}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="4" 
                  Grid.Column="1"
                  Content="UH"
                  IsChecked="True"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding Cant}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="5" 
                  Grid.Column="1"
                  Content="KM"
                  IsChecked="True"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding Meilage}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>



        <!--points visibility-->
        <CheckBox Grid.Row="1" 
                  Grid.Column="0"
                  Content="Kanten points" 
                  IsChecked="False"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding KantenPoints}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"/>
        <CheckBox Grid.Row="2" 
                  Grid.Column="0"
                  Content="LA points"
                  IsChecked="False"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding HorizontalPoints}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="3" 
                  Grid.Column="0"
                  Content="HO points"
                  IsChecked="False"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding VerticalPoints}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="4" 
                  Grid.Column="0"
                  Content="UH points"
                  IsChecked="False"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding CantPoints}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
        <CheckBox Grid.Row="5" 
                  Grid.Column="0"
                  Content="KM points"
                  IsChecked="False"
                  DataContext="{StaticResource visualizedDataViewModel}"
                  Command="{Binding MeilagePoints}"
                  CommandParameter="{Binding RelativeSource={RelativeSource self}}"></CheckBox>
    </Grid>
</UserControl>
